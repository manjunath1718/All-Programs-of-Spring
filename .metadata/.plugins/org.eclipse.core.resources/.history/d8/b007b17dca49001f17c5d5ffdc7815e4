package com.telusko;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.ConfigurableApplicationContext;

import com.telusko.service.Courses;

@SpringBootApplication
public class SpringBootProfilesApplication {

	public static void main(String[] args) {
		ConfigurableApplicationContext container = SpringApplication.run(SpringBootProfilesApplication.class, args);

	
		Courses course = container.getBean(Courses.class);
		Boolean status = course.getCourse();
		if(status) {
			System.out.println("Enrolled course successfully");
		}else {
			
		}
	
	}

}
